<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailVerifiedFailedActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:background="@color/gray"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="378dp"
            android:layout_gravity="center"
            android:src="@drawable/error_icon" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="@dimen/_25sdp"
            android:text="Email not verified" />

        <TextView
            android:layout_width="match_parent"
            android:layout_below="@id/textView4"

            android:layout_height="wrap_content"
            android:id="@+id/textSample1"
            android:layout_marginTop="@dimen/_11sdp"
            android:textSize="@dimen/_21sdp"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_11sdp"
            android:textStyle="bold"
            android:text="Please Verify your email before Signing in"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_to_login_btn"
            android:layout_marginBottom="@dimen/_18sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_178sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2_bg"
            android:padding="@dimen/_6sdp"
            android:text="Back to Login"
            android:textSize="@dimen/_17sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_50sdp"/>
    </LinearLayout>
</RelativeLayout>