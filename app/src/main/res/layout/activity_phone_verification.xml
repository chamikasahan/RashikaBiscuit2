<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_bg"
    tools:context=".PhoneVerificationActivity">




    <TextView
        android:id="@+id/forget_pwd_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="Verification"
        android:textSize="@dimen/_25sdp"
        android:textColor="#000000"
        android:textStyle="bold" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_pwd_text3"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:scrollbars="none"
        android:background="@drawable/round">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_30sdp">

            <TextView
                android:id="@+id/forget_pwd_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/forget_pwd_text3"
                android:gravity="start"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="We will send you one time OTP to your phone number"
                android:textSize="@dimen/_16sdp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp">

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="@dimen/_155sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/edittextbac"
                    android:ems="10"
                    android:inputType="phone"
                    android:padding="@dimen/_7sdp"
                    android:hint="07x xxx xxx"
                    android:drawablePadding="@dimen/_9sdp"
                    android:drawableStart="@drawable/baseline_phone_24"
                    android:autofillHints="TelephoneNumber"
                    android:textColor="@color/black"
                    android:textColorHint="#80000000"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/otp_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/shape2_bg"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="Send OTP"
                    android:textSize="@dimen/_13sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/get_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/edittextbac"
                android:ems="10"
                android:inputType="number"
                android:padding="@dimen/_7sdp"
                android:hint="Your OTP code"
                android:drawablePadding="@dimen/_9sdp"
                android:gravity="center"
                android:autofillHints="Number"
                android:textColor="@color/black"
                android:textColorHint="#80000000"/>


            <TextView
                android:id="@+id/resend_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/forget_pwd_text3"
                android:gravity="start"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Resend OTP verification Code"
                android:textSize="@dimen/_13sdp"
                android:textColor="#000000"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/phone_confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape2_bg"
                android:text="Confirm"
                android:textSize="@dimen/_17sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"/>

        </LinearLayout>

    </ScrollView>


    <!--    nav bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>