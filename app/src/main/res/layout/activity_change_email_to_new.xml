<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".ChangeEmailToNewActivity">

    <TextView
        android:id="@+id/heading_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Email Address"
        android:textAlignment="center"
        android:textSize="@dimen/_22sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_32sdp"
        />

    <LinearLayout
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_52sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:layout_below="@+id/heading_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Current Email Address">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/current_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"

            android:enabled="true"
            android:text="user@example.com" /> <!-- Set this dynamically -->
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22sdp"
            app:passwordToggleEnabled="true"
            android:hint="password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"

                android:enabled="true"
                android:text="password" /> <!-- Set this dynamically -->
        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22sdp"
            android:hint="new Email Address">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"

                android:enabled="true"
                android:text="user@example.com" /> <!-- Set this dynamically -->
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_22sdp"
            android:hint="Re-enter new Email Address">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirm_new_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"

                android:enabled="true"
                android:text="user@example.com" /> <!-- Set this dynamically -->
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset_email_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/shape2_bg"
            android:layout_marginStart="@dimen/_2sdp"
            android:padding="@dimen/_2sdp"
            android:drawableStart="@drawable/baseline_lock_reset_24"
            android:text="Change email address"
            android:paddingStart="@dimen/_30sdp"
            android:paddingEnd="@dimen/_40sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_19sdp"/>


    </LinearLayout>

</RelativeLayout>