<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_bg"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test button"></androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView20"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="#000000"
        android:textSize="@dimen/_40sdp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:scrollbars="none"
        android:background="@drawable/round">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_30sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_20sdp">


                        <EditText
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:autofillHints="emailAddress"
                            android:background="@drawable/txt_back"
                            android:drawableStart="@drawable/email_icon"
                            android:drawablePadding="@dimen/_9sdp"
                            android:ems="10"
                            android:gravity="start"
                            android:hint="Email address"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/_7sdp"
                            android:textColor="@color/black"
                            android:textColorHint="#80000000" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etLoginPasswordLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            app:passwordToggleEnabled="true"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/password"
                                android:layout_width="match_parent"
                                android:drawableStart="@drawable/password"
                                android:paddingStart="@dimen/_5sdp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textColorHint="#80000000"
                                android:background="@drawable/txt_back"
                                android:ems="10"
                                android:padding="@dimen/_7sdp"
                                android:hint="   password"
                                android:inputType="textPassword" />


                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp">


                            <CheckBox
                                android:id="@+id/checkBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Remember Me"
                                android:textColor="#FFFFFF"
                                android:buttonTint="#A2A2A2" />

                            <TextView
                                android:id="@+id/forgot_pwd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Forgot Password"
                                android:textColor="@color/white"
                                android:gravity="end" />
                        </LinearLayout>

                             <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/loginbtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape2_bg"
                            android:text="Sign In"
                            android:textSize="@dimen/_17sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_20sdp"/>



                             <TextView
                            android:id="@+id/singbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/don_t_have_an_account_sign_up"
                            android:textColor="@color/white"
                            android:gravity="end"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textStyle="bold"/>

                         </LinearLayout>
        </LinearLayout>






    </ScrollView>








</RelativeLayout>