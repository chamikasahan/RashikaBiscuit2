<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/logo" />


    <TextView
        android:id="@+id/sign_up_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView20"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="SIGN UP"
        android:textSize="@dimen/_40sdp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_txt"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:scrollbars="none"
        android:background="@drawable/round">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_30sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/edittextbac"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="@dimen/_7sdp"
                    android:hint="John Doe"
                    android:drawablePadding="@dimen/_9sdp"
                    android:drawableStart="@drawable/person"
                    android:textColor="@color/black"
                    android:textColorHint="#80000000"/>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/edittextbac"
                    android:ems="10"
                    android:inputType="phone"
                    android:padding="@dimen/_7sdp"
                    android:hint="07x xxx xxx"
                    android:drawablePadding="@dimen/_9sdp"
                    android:drawableStart="@drawable/baseline_phone_24"
                    android:textColor="@color/black"
                    android:textColorHint="#80000000"/>

                <EditText
                    android:id="@+id/email_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/edittextbac"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="@dimen/_7sdp"
                    android:hint="example@gmail.com"
                    android:drawablePadding="@dimen/_9sdp"
                    android:drawableStart="@drawable/email_icon"
                    android:textColor="@color/black"
                    android:textColorHint="#80000000"/>

                <EditText
                    android:id="@+id/shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/edittextbac"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="@dimen/_7sdp"
                    android:hint="Shop Name"
                    android:drawablePadding="@dimen/_9sdp"
                    android:drawableStart="@drawable/store_icon"
                    android:autofillHints="shopName"
                    android:textColor="@color/black"
                    android:textColorHint="#80000000"/>

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/edittextbac"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="@dimen/_7sdp"
                    android:hint="Shop Address"
                    android:drawablePadding="@dimen/_9sdp"
                    android:drawableStart="@drawable/location_icon"
                    android:autofillHints="adddress"
                    android:textColor="@color/black"
                    android:textColorHint="#80000000"/>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/edittextbac"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="@dimen/_7sdp"
                    android:hint="Password"
                    android:drawablePadding="@dimen/_4sdp"
                    android:drawableStart="@drawable/password"
                    android:password="true"
                    android:textColor="@color/black"
                    android:textColorHint="#80000000"/>

                <EditText
                    android:id="@+id/confirm_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/edittextbac"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="@dimen/_7sdp"
                    android:hint="Confirm password"
                    android:drawablePadding="@dimen/_4sdp"
                    android:drawableStart="@drawable/password"
                    android:password="true"
                    android:textColor="@color/black"
                    android:textColorHint="#80000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">


                    <CheckBox
                        android:id="@+id/agree_term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="I agree to the terms and conditions"
                        android:textColor="@color/white"
                        android:buttonTint="@color/white"/>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sign_in_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape2_bg"
                    android:text="SIGN UP"
                    android:textSize="@dimen/_17sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"/>



                <TextView
                    android:id="@+id/login_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Already have an account ? login"
                    android:textColor="@color/white"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textStyle="bold"/>

            </LinearLayout>






        </LinearLayout>






    </ScrollView>


</RelativeLayout>