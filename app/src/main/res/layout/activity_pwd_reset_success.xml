<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PwdResetSuccessActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:background="@drawable/success_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/success_sign_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_95sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:src="@drawable/success" />

        <TextView
            android:id="@+id/success_sign_txt"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/green"
            android:textSize="@dimen/_15sdp"
            android:text=" Your password has been successfully updated. You can now log in using your new password.!" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_success_back_btn"
            android:layout_gravity="center"
            android:layout_width="@dimen/_250sdp"
            android:layout_marginTop="@dimen/_110sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            android:background="@drawable/shape2_bg"
            android:text="back to Login"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatButton>





    </LinearLayout>

</RelativeLayout>