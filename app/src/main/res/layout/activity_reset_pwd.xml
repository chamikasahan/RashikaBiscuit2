<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_bg"
    tools:context=".ResetPwdActivity">


    <TextView
        android:id="@+id/reset_pwd_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_55sdp"
        android:text="Create New Password"
        android:textSize="@dimen/_25sdp"
        android:textColor="#000000"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reset_pwd_txt1"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:scrollbars="none"
        android:background="@drawable/round">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_30sdp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/edittextbac"
                android:ems="10"
                android:inputType="text"
                android:padding="@dimen/_7sdp"
                android:hint="New Password"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableStart="@drawable/password"
                android:password="true"
                android:textColor="@color/black"
                android:textColorHint="#80000000"/>

            <EditText
                android:id="@+id/password_field2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/edittextbac"
                android:ems="10"
                android:inputType="text"
                android:padding="@dimen/_7sdp"
                android:hint="Re-Enter Password"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableStart="@drawable/password"
                android:password="true"
                android:textColor="@color/black"
                android:textColorHint="#80000000"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/create_pwd_confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape2_bg"
                android:text="Confirm"

                android:textSize="@dimen/_17sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_30sdp"/>

        </LinearLayout>



    </ScrollView>

    <!--    nav bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>