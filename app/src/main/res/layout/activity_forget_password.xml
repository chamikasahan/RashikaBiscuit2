<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ForgetPassword">


    <ImageView
        android:id="@+id/forget_logo"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/forget_lock" />


    <TextView
        android:id="@+id/forget_pwd_text"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_logo"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_centerHorizontal="true"
        android:text="Forget Password ?"
        android:textSize="@dimen/_25sdp"
        android:textColor="#000000"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/forget_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_pwd_text"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_centerHorizontal="true"
        android:gravity="start"
        android:text="Enter Your Username Below to create new password"
        android:textSize="@dimen/_15sdp"
        android:textColor="#000000"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_txt2"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:scrollbars="none"
        android:background="@drawable/roundback">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_30sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp">


                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/txt_back"
                    android:drawableStart="@drawable/email_icon"
                    android:drawablePadding="@dimen/_9sdp"
                    android:ems="10"
                    android:hint="example@gmail.com"
                    android:inputType="text"
                    android:padding="@dimen/_7sdp"
                    android:textColor="@color/black"
                    android:textColorHint="#80000000" />

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/next_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape2_bg"
                        android:text="Next"

                        android:textSize="@dimen/_17sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_20sdp"/>


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_95sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/shape2_bg"
                android:text="Back to Login" />


        </LinearLayout>






    </ScrollView>






</RelativeLayout>
