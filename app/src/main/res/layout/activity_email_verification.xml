<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/other_act_bg"
    tools:context=".EmailVerificationActivity">

    <TextView
        android:id="@+id/email_verify_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_55sdp"
        android:text="Reset Password "
        android:textSize="@dimen/_25sdp"
        android:textColor="#000000"
        android:textStyle="bold" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_verify_txt1"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:scrollbars="none"
        android:background="@drawable/round">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_30sdp">


            <TextView
                android:id="@+id/email_verifytxt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="start"
                android:text="Enter the email address associated with your account to receive a password reset link."
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />



                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/txt_back"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_7sdp"
                    android:hint="example@gmail.com"
                    android:drawablePadding="@dimen/_9sdp"
                    android:drawableStart="@drawable/email_icon"
                    android:autofillHints="TelephoneNumber"
                    android:textColor="@color/black"
                    android:textColorHint="#80000000"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reset_pwd_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/shape2_bg"
                android:layout_marginStart="@dimen/_2sdp"
                android:padding="@dimen/_2sdp"
                android:drawableStart="@drawable/baseline_lock_reset_24"
                android:text="Reset Password"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_19sdp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/shape2_bg"
                android:layout_marginStart="@dimen/_2sdp"
                android:textAlignment="center"
                android:paddingStart="@dimen/_70sdp"
                android:paddingEnd="@dimen/_70sdp"
                android:drawableStart="@drawable/baseline_arrow_back_24"
                android:textStyle="bold"
                android:text="Back"
                android:textSize="@dimen/_17sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_19sdp"/>




        </LinearLayout>

    </ScrollView>

</RelativeLayout>