<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="5dp" />
    <!-- Gradient background -->
    <gradient
        android:startColor="#FF6F00"
        android:endColor="#FFA000"
        android:type="linear"
        android:angle="45"/>
    <!-- Add a stroke (border) -->
    <stroke
        android:width="2dp"
        android:color="#FF5722"/>
    <!-- Add a shadow -->
    <padding android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />
    <solid android:color="#fdbb2d" /> <!-- Background color of the shape -->
</shape>